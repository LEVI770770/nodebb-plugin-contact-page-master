<form role="form" class="contact-page-settings">
	<div class="row">
		<div class="col-xs-12">
            <h2>הגדרות יצירת קשר</h2>
            <div class="row">
                <div class="col-lg-6 col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">הגדרות כלליות</font></font></div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label for="contactEmail"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">כתובת האיימיל אליו תשלח ההודעה</font></font></label>
                                <input class="form-control" type="email" name="contactEmail" id="contactEmail">
                            </div>
                            <div class="form-group">
                                <label for="messageFooter"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">
                                    כותרת תחתונה של הודעה (אופציונלי)
                                </font></font></label>
                                <input class="form-control" type="text" name="messageFooter" id="messageFooter">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Google Re-Captcha (אופציונלי)</font></font></div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label for="reCaptchaPubKey"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">
                                    מפתח API ציבורי
                                </font></font></label>
                                <input class="form-control" type="text" name="reCaptchaPubKey" id="reCaptchaPubKey">
                            </div>

                            <div class="form-group">
                                <label for="reCaptchaPrivKey"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">
                                    מפתח API פרטי 
                                </font></font></label>
                                <input class="form-control" type="text" name="reCaptchaPrivKey" id="reCaptchaPrivKey">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
		</div>
	</div>
</form>